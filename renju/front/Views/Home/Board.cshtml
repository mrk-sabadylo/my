
@using renju

<table>
    @for (int i = 0; i < Model.Size; i++)
    {
        <tr>
            @for (int j = 0; j < Model.Size; j++)
            {
                <td>
                    @if (Model.BoardAt(i, j) == Renju.EmptyCell)
                    {
                        <a href="@Url.Action("MakeMove", new { row = i, col = j })">@Model.BoardAt(i, j)</a>
                    }
                    else
                    {
                        @Model.BoardAt(i, j)
                    }
                </td>
            }
        </tr>
    }
</table>